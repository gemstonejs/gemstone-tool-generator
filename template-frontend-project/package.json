{
    "name":           "{{ name }}-fe",
    "version":        "{{ version }}",
    "homepage":       "{{ homepage }}",
    "description":    "{{ description }} (Frontend)",
    "keywords":       [ "{{ keywords | join("\", \"") }}" ],
    "license":        "{{ license }}",
    "author": {
        "name":       "{{ authorName }}",
        "url":        "{{ authorUrl }}"
    },
    "scripts": {
{% if bower %}        "bower":      "bower",
        "install":    "bower install",
{% endif %}        "gemstone":   "gemstone",
        "build":      "gemstone frontend-build",
        "build:prod": "gemstone frontend-build env=production",
        "start":      "true",
        "dev":        "npm run build watch=true beep=true",
        "clean":      "shx rm -rf dst",
        "distclean":  "shx rm -rf node_modules"
    },
    "devDependencies": {
{% if bower %}        "bower":                         "*",
{% endif %}        "gemstone-tool":                 "*",
        "gemstone-tool-generator":       "*",
        "gemstone-tool-frontend":        "*",
        "gemstone-framework-frontend":   "*"
    },
    "dependencies": {
    }
}
