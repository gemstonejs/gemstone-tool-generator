{
    "name":           "{{ name }} (Meta)",
    "version":        "{{ version }}",
    "homepage":       "{{ homepage }}",
    "description":    "{{ description }}",
    "keywords":       [ "{{ keywords | join("\", \"") }}" ],
    "license":        "{{ license }}",
    "author": {
        "name":       "{{ authorName }}",
        "url":        "{{ authorUrl }}"
    },
    "devDependencies": {
        "stmux":           "*"
    },
    "dependencies": {
        "npm-run-all":     "*"
    },
    "scripts": {
        "install":         "npm-run-all -s install:ui install:sv",
        "install:stmux":   "stmux -w error -e ERROR -- [ \"npm run install:ui\" .. \"npm run install:sv\" ]",
        "install:ui":      "cd ../{{name}}-ui && npm install",
        "install:sv":      "cd ../{{name}}-sv && npm install",

        "build":           "npm-run-all -s build:ui build:sv",
        "build:stmux":     "stmux -w error -e ERROR -- [ \"npm run build:ui\" .. \"npm run build:sv\" ]",
        "build:ui":        "cd ../{{name}}-ui && npm run build",
        "build:sv":        "cd ../{{name}}-sv && npm run build",

        "start":           "cd ../{{name}}-sv && npm start",

        "clean":           "npm-run-all -s clean:ui clean:sv",
        "clean:stmux":     "stmux -w error -e ERROR -- [ \"npm run clean:ui\" .. \"npm run clean:sv\" ]",
        "clean:ui":        "cd ../{{name}}-ui && npm run clean",
        "clean:sv":        "cd ../{{name}}-sv && npm run clean",

        "distclean":       "npm-run-all -s distclean:ui distclean:sv",
        "distclean:stmux": "stmux -w error -e ERROR -- [ \"npm run distclean:ui\" .. \"npm run distclean:sv\" ]",
        "distclean:ui":    "cd ../{{name}}-ui && npm run distclean",
        "distclean:sv":    "cd ../{{name}}-sv && npm run distclean",

        "dev":             "npm-run-all -s dev:ui dev:sv start",
        "dev:stmux":       "stmux -w always -e ERROR -- [ [ \"npm run dev:ui\" .. \"npm run dev:sv\" ] : -s 1/3 -f \"npm start\" ]",
        "dev:ui":          "cd ../{{name}}-ui && npm run dev",
        "dev:sv":          "cd ../{{name}}-sv && npm run dev"
    }
}
